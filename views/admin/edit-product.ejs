<%- include('../includes/head') %> <%- include('../includes/nav') %>

<main>
  <div class="container">
    <div class="row mt-5">
      <div class="col-6">
        <form
          action="/admin/<%= editing == 'true' ? 'edit-product' : 'add-product' %>"
          method="POST"
        >
          <div class="form-group">
            <label for="">Title</label>
            <input
              class="form-control"
              type="text"
              name="title"
              value="<%= editing == 'true' ? product.title : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="">Price</label>
            <input
              class="form-control"
              type="text"
              name="price"
              value="<%= editing == 'true' ? product.price : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="">Image Url</label>
            <input
              class="form-control"
              type="text"
              name="imageUrl"
              value="<%= editing == 'true' ? product.imageUrl : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="">Description</label>
            <textarea name="desc" class="form-control" rows="5">
<%= editing == 'true' ? product.description : '' %></textarea
            >
          </div>
          <% if(editing == 'true'){ %>
          <input type="hidden" name="productID" value="<%= product.id %>" />
          <% } %>
          <button class="btn btn-primary mt-2" type="submit">
            <%= editing == 'true' ? 'Update Product' : 'Add Product' %>
          </button>
        </form>
      </div>
    </div>
  </div>
</main>
<%- include('../includes/end') %>
